@model OrenairTraining.Models.question

@{
    ViewBag.Title = "Добавление нового вопроса";
}

<h2>Добавление нового вопроса</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Вопрос</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.text)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.text)
            @Html.ValidationMessageFor(model => model.text)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.type_id)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model=>model.type_id,ViewBag.Types as SelectList)
            @Html.ValidationMessageFor(model => model.type_id)
        </div>
        <br />
        <div>
            @Html.Partial("Answers")
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.material_id)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model=>model.material_id,ViewBag.Materials as SelectList)
            @Html.ValidationMessageFor(model => model.material_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.time)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.time)
            @Html.ValidationMessageFor(model => model.time)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.container_id)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model=>model.container_id,ViewBag.Themes as SelectList)
            @Html.ValidationMessageFor(model => model.container_id)
        </div>

        <p>
            <input type="submit" value="Добавить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
