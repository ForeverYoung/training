@model OrenairTraining.Models.testconfig

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <fieldset>
        
        <legend>Темы и вопросы</legend>

        @for (int i = 0; i < ViewBag.Themescount; i++)
        {
            <div>
                @Html.Label("Тема")            
                @Html.DropDownList("themes", ViewBag.Themes as SelectList)   
            
                @Html.Label("Вопросы")
                @Html.TextBox("questions")
                @Html.ValidationMessageFor(model => model.questions)
            </div>
        }

    </fieldset>

