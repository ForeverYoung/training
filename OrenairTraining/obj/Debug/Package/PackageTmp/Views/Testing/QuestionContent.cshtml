@model OrenairTraining.Models.MQuestion

@using (Ajax.BeginForm("AnswerOnQuestion", Model ,new AjaxOptions { UpdateTargetId = "questionfield", InsertionMode = InsertionMode.Replace }))
{
    <br />
    <div>
        @Html.DisplayNameFor(model => model.Text) № @(Model.IndexInTest + 1)
    </div>

    <div>
        @Html.DisplayFor(model => model.Text)
    </div>
    
    <br />
    for (int i = 0; i < ViewBag.Variants.Count; i++)
        {
            <div>
                @Html.RadioButton("answers", i, false) @ViewBag.Variants[i].TrimStart(new char[]{'@'})            
            </div>
        }
    <br />
    <input type="submit" value="Ответить" />
    <br />
    <div>
        @Ajax.ActionLink("Пропустить", "NextQuestion", new AjaxOptions{ UpdateTargetId="questionfield" })
    </div>
}